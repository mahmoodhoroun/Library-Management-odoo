    <record id="library_book_view_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban default_group_by="author_ids" drag_drop="true">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_title">
                                        <span>Name: </span>
                                        <field name="name" />
                                    </div>
                                    <div class="o_kanban_card_subtitle">

                                        <div>
                                            <span>ISBN: </span>
                                            <field name="isbn" />
                                        </div>
                                        <div>
                                            <span attrs="{'invisible': [('price', '=', 0)]}">Price: </span>
                                            <field name="price"  attrs="{'invisible': [('price', '=', 0)]}"/>
                                        </div>
                                        <div>
                                            <span attrs="{'invisible': [('publication_date', '=', False)]}">Publication Date: </span>
                                            <field name="publication_date" attrs="{'invisible': [('publication_date', '=', False)]}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="isbn" />
                <field name="author_ids" />
                <field name="publication_date" />
                <field name="price" />

            </tree>
        </field>
    </record>


</odoo>